<UserControl x:Class="Launcher.Views.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             Margin="5"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Rectangle x:Name="BackGround" Fill="#FFB366" RadiusX="10" RadiusY="10"/>
        <TextBlock x:Name="TagText" Text="{Binding Text.Value}" FontSize="{Binding FontSize.Value}" Foreground="White" SizeChanged="TagTextSizeChanged" TextAlignment="Center" />
    </Grid>
</UserControl>
